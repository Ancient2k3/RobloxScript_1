local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local localPlayer = Players.LocalPlayer

if not localPlayer or not localPlayer.Character or not localPlayer.Character:FindFirstChild("HumanoidRootPart") then
    print("LocalPlayer or their HumanoidRootPart is not available.")
    return
end

local messageIndex = 1  -- Start with the first message

local function getNearestPlayer()
    local nearestPlayer = nil
    local shortestDistance = math.huge
    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= localPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            local distance = (localPlayer.Character.HumanoidRootPart.Position - player.Character.HumanoidRootPart.Position).magnitude
            if distance < shortestDistance then
                shortestDistance = distance
                nearestPlayer = player
            end
        end
    end
    return nearestPlayer
end

local function sendSequentialMessages()
    local nearestPlayer = getNearestPlayer()
    if not nearestPlayer then
        print("No nearest player found.")
        return
    end

    local messages = {
        "When I'm lost in a dark city called "The Neon Monster""
"The small embers in my heart turned into a shooting star"
"As long as the flame doesn't go out, I'll live up to my duty"
"We'll wait, for when the fight comes"
"Then we'll fight for our lives!"
"Flashing neon city, terribly attractive"
"Cause 'dirty things' are buried underground"
"In the cage of a rotting beast"
"Struggling for our lives"
"In a cruel dance, fight to survive"
"A broken kind of paradise"
"Close our eyes so we can stay blind"
"Trick our minds into some ecstasy daydream"
"The kind of ideal that everyone laughs at"
"But the moment I make it, it will be called"
"A miracle!"
"When I'm lost in a dark city called "The Neon Monster""
"The small embers in my heart turned into a shooting star"
"As long as the flame doesn't go out, I'll live up to my duty"
"We'll wait, for when the fight comes"
"Then we'll fight for our lives!"
"I'm not a hero"
"And I'm not a great knight in legend"
"I'm not a strong man"
"But my heart is much larger than my life"
"One step after another"
"We will keep on moving forward"
"Onwards until the victory is ours"
"One more time!"
"When I'm lost in a dark city called "The Neon Monster""
"The small embers in my heart turned into a shooting star"
"As long as the flame doesn't go out, I'll live up to my duty"
"We'll wait, for when the fight comes"
"Then we'll fight for our lives!"
"These moments count for everything"
"Until we save all the infected"
"We'll never give up"
"We'll never give up"
"No!"
"We'll never give up"
"We'll never give up"
"We'll wait, when the fight comes"
"Then we'll fight for our lives!"
}

    if messageIndex > #messages then
        messageIndex = 1  -- Reset to the first message if at the end
    end

    local args = {
        [1] = messages[messageIndex],
        [2] = "All"
    }
    ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer(unpack(args))

    messageIndex = messageIndex + 1  -- Move to the next message
end

local isWhite = true

while isWhite do
sendSequentialMessages()
wait(2)
end
